@model GetServiceByIdQueryResult
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Hizmet Güncelleme Sayfası</h3>
            <hr style="color:purple;" />
            <table class="table table-striped">
                <form method="post">
                    <input type="hidden" asp-for="ServiceID" />
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <br />
                    <label>Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <br />
                    <label>İkon</label>
                    <input type="text" class="form-control" asp-for="Icon" />
                    <br />
                    <button class="btn btn-outline-primary"><i class="fas fa-save"></i>Kaydet</button>
                </form>
            </table>
        </div>

    </div>
</div>


