@model Baker_DesignPatterns.MediatorPattern.Results.StatisticalValuesResults.GetStatisticalValuesByIdQueryResult

@{
    ViewData["Title"] = "UpdateStatisticalValues";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">İstatistik Güncelleme Sayfası</h3>
            <hr style="color:purple;" />
            <table class="table table-striped">
                <form method="post">
                    <input type="hidden" asp-for="StatisticalValuesID"/>
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <br />
                    <label>Değer</label>
                    <input type="text" class="form-control" asp-for="Value" />
                    <br />
                    <label>Görsel</label>
                    <input type="text" class="form-control" asp-for="Icon" />
                    <br />
                    <button class="btn btn-outline-primary"><i class="fas fa-save"></i>Kaydet</button>
                </form>
            </table>
        </div>

    </div>
</div>

