@model List<Baker_DesignPatterns.CQRSPattern.Results.ContactResults.GetContactQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> #</th>
                        <th>İsim</th>
                        <th>Mail</th>
                        <th>Konu</th>
                        <th>Mesaj</th>
                        <th>Sil</th>
                        <th>Detay</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td> @count</td>
                            <td>@item.NameSurname</td>
                            <td>@item.Email</td>
                            <td>@item.Subject</td>
                            <td>@item.Content</td>
                            <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger"><i class="fas fa-trash"></i>Sil</a></td>
                            <td><a href="/Contact/DetailContact/@item.ContactID" class="btn btn-gradient-light btn-rounded btn-fw"><i class="fas fa-pen"></i>Detay</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
