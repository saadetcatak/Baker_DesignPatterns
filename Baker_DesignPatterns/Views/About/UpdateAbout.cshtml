@model Baker_DesignPatterns.CQRSPattern.Results.GetAboutByIdQueryResult
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Hakkımızda Güncelleme Sayfası</h3>
            <hr style="color:purple;" />
            <table class="table table-striped">
                <form method="post">
                    <input type="hidden" asp-for="AboutID"/>
                    <label>Hakkımızda</label>
                    <input type="text" class="form-control" asp-for="Article" />
                    <br />
                    <button class="btn btn-outline-primary"><i class="fas fa-save"></i>Kaydet</button>
                </form>
            </table>
        </div>

    </div>
</div>
