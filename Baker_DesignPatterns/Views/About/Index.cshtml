@model List<Baker_DesignPatterns.CQRSPattern.Results.GetAboutQueryResult>
@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    int count = 0;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> #</th>
                        <th> Hakkımızda</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td> @count</td>
                            <td>@item.Article</td>                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
