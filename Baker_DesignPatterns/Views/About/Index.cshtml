@model List<GetAboutQueryResult>
@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    int count = 0;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> #</th>
                        <th> Hakkımızda</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td> @count</td>
                            <td>@item.Article</td>
                            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger"><i class="fas fa-trash"></i>Sil</a></td>
                            <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success"><i class="fas fa-pen"></i> Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/About/CreateAbout/" class="btn btn-outline-primary"><i class="fas fa-plus-circle"></i> Yeni Yetkinlik Girişi</a>
        </div>
       
    </div>
</div>

